{
    "kind": "collectionType",
    "collectionName": "strapi_rooms",
    "info": {
        "singularName": "room",
        "pluralName": "rooms",
        "displayName": "Room"
    },
    "options": {
        "draftAndPublish": true
    },
    "attributes": {
        "name": {
            "type": "string",
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "name"
        },
        "resort_id": {
            "type": "string",
            "required": true,
            "description": "UUID of resort in Supabase"
        },
        "price": {
            "type": "decimal",
            "required": true
        },
        "amenities": {
            "type": "json"
        },
        "availability": {
            "type": "boolean",
            "default": true
        },
        "media": {
            "type": "media",
            "multiple": true,
            "allowedTypes": [
                "images",
                "videos"
            ]
        }
    }
}